  <label for="investor">Investors Name</label>
  <input type="text" name="investor[name]" value="<%= @investor.name %>"><br>

  <label for="location">Location:</label>
  <input type="text" name="investor[location]" value="<%= @investor.location %>"><br>

  <input type="submit" value="submit">
</form>