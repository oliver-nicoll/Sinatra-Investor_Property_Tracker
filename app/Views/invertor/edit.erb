  <label for="investor">Investors Name</label>
  <input type="text" id="investor" name="investor" value="<%= @investor.name %>" />

  <label for="location">Location:</label>
  <input type="text" id="location" name="location" value="<%= @investor.location %>" />

  <input type="submit" value="submit" />
</form>