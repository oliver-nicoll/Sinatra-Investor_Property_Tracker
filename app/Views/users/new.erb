<div style="text-align: right; margin-top: 0px;
      margin-bottom: 100px;
      margin-right: 150px;
      margin-left: 80px;">  
  <form action="/signup" method="POST">
    
    <br><br><br>
    <h3 style=" color: #90926f; margin-right: 400px;" >Sign Up:</h3><br>
    Email: <input type="email" name="user[email]"><br><br>

    Password: <input type="password" name="user[password]"><br><br>
    Password Confirmation: <input type="password" name="user[password_confirmation]"><br><br>

    First Name: <input type="text" name="user[first_name]"><br><br>
    Last Name: <input type="text" name="user[last_name]"><br><br>
    Age: <input type="integer" name="user[age]"><br><br>

    <input type="submit" class="btn btn-outline-dark" style='text-decoration:none; color: #bf764c;' value="Create Account">
  </form>
</div>